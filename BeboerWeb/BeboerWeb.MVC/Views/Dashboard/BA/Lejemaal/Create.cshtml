@model LejemaalEjendommeViewModel
@{
    Layout = "~/Views/Dashboard/_SharedLayout.cshtml";
    ViewData["Name"] = "Create";
}

<div class="row">
    <div class="col">
        <h1>Opret et nyt lejemål</h1>
        <hr />
        <form asp-controller="BALejemaal" asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating">
                <input asp-for="Lejemaal.Adresse" class="form-control"/>
                <label asp-for="Lejemaal.Adresse" class="form-label"></label>
                <span asp-validation-for="Lejemaal.Adresse" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Lejemaal.Etage" class="form-control"/>
                <label asp-for="Lejemaal.Etage" class="form-label"></label>
                <span asp-validation-for="Lejemaal.Etage" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Lejemaal.Areal" class="form-control"/>
                <label asp-for="Lejemaal.Areal" class="form-label"></label>
                <span asp-validation-for="Lejemaal.Areal" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Lejemaal.Husleje" class="form-control"/>
                <label asp-for="Lejemaal.Husleje" class="form-label"></label>
                <span asp-validation-for="Lejemaal.Husleje" class="text-danger"></span>
            </div>
            <input asp-for="Lejemaal.Koekken" class="form-check-input">
            <label asp-for="Lejemaal.Koekken" class="control-label"></label>
            <input asp-for="Lejemaal.Badevaerelse" class="form-check-input">
            <label asp-for="Lejemaal.Badevaerelse" class="control-label"></label>
            <div class="form-floating"></div>
            <div class="form-floating">
                <select asp-for="Lejemaal.EjendomId" class="form-select">
                    @foreach (var ejendom in Model.Ejendomme)
                    {
                        <option value="@ejendom.Id">@ejendom.Adresse, @ejendom.Postnr @ejendom.By</option>
                    }
                </select>
                <label asp-for="Lejemaal.EjendomId" class="form-label"></label>
            </div>
            <button type="submit" class="btn btn-lg btn-primary bw_button bw_button_inline">Opret lejemål</button>
            <a asp-controller="BALejemaal" asp-action="Index">
                <input type="button" value="Tilbage til oversigten" class="btn btn-lg btn-primary bw_button bw_button_inline"/>
            </a>
        </form>
    </div>
    <div class="col"></div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
