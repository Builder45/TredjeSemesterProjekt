@using Microsoft.AspNetCore.Razor.Language.Extensions
@model List<LejemaalViewModel>
@{
    ViewData["Name"] = "Index";
    Layout = "~/Views/Dashboard/_SharedLayout.cshtml";
}

<h1>Oversigt over lejemål</h1>
<br/>
<a asp-controller="BALejemaal" asp-action="Create">
    <input type="button" value="Opret lejemål" class="btn btn-primary bw_button" />
</a>
<br/>
<table class="table">
	<thead>
	<tr>
		<th>
			@Html.DisplayNameFor(model => model.First().Adresse)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.First().Etage)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.First().Husleje)
        </th>		
        <th>
            @Html.DisplayNameFor(model => model.First().Areal)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().Koekken)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().Badevaerelse)
        </th>
        <th></th>
	</tr>
	</thead>
	<tbody>
	@foreach (var item in Model) {
		<tr>
            <td>
                @Html.DisplayFor(modelitem => item.Adresse)
            </td>
            <td>
                @Html.DisplayFor(modelitem => item.Etage)
            </td>
            <td>
                @Html.DisplayFor(modelitem => item.Husleje)
            </td>		
            <td>
                @Html.DisplayFor(modelitem => item.Areal)
            </td>
            <td>
                @Html.DisplayFor(modelitem => item.Koekken)
            </td>
            <td>
                @Html.DisplayFor(modelitem => item.Badevaerelse)
            </td>
            <td>
                <a asp-controller="BALejemaal" asp-action="Edit" asp-route-id="@item.Id">Rediger</a> |
                <a asp-controller="BALejer" asp-action="IndexByLejemaal" asp-route-id="@item.Id">Se lejere</a>
                <input type="hidden" asp-for="@item.RowVersion"/>
            </td>
        </tr>
	}
	</tbody>
</table>
