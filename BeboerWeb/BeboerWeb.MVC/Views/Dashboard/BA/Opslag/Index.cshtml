@model List<OpslagViewModel>
@{
    ViewData["Name"] = "Index";
    Layout = "~/Views/Dashboard/_SharedLayout.cshtml";
}

<h1>Opslagsoversigt</h1>
<br/>
<a asp-controller="BAOpslag" asp-action="Create">
    <input type="button" value="Opret nyt opslag" class="btn btn-primary bw_button" />
</a>
<br/>
<table class="table">
    <thead>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.First().Dato)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().Titel)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().Besked)
        </th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Dato)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Titel)
            </td>
            <td>
                <p>@item.GetBeskedPreview()</p>
            </td>
            <td>
                <a asp-controller="BAOpslag" asp-action="Edit" asp-route-id="@item.Id">Rediger</a> |
                <a asp-controller="BAOpslag" asp-action="Delete" asp-route-id="@item.Id">Slet</a>
            </td>

        </tr>
    }
    </tbody>
</table>