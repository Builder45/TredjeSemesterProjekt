@model BrugerViewModel

@{
    ViewData["Name"] = "Edit";
    Layout = "~/Views/Dashboard/_SharedLayout.cshtml";
}

<div class="row">
    <div class="col">
        <h1>Rediger brugeroplysninger</h1>
        <hr />
        <form asp-controller="BAPerson" asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="BrugerId" />
            <div class="form-floating">
                <input asp-for="Email" class="form-control"/>
                <label asp-for="Email" class="form-label"></label>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Fornavn" class="form-control"/>
                <label asp-for="Fornavn" class="form-label"></label>
                <span asp-validation-for="Fornavn" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Efternavn" class="form-control"/>
                <label asp-for="Efternavn" class="form-label"></label>
                <span asp-validation-for="Efternavn" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Telefonnr" class="form-control"/>
                <label asp-for="Telefonnr" class="form-label"></label>
                <span asp-validation-for="Telefonnr" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-lg btn-primary bw_button bw_button_inline">Gem ændringer</button>
            <a asp-controller="BAPerson" asp-action="Index">
                <input type="button" value="Tilbage til oversigten" class="btn btn-lg btn-primary bw_button bw_button_inline"/>
            </a>
        </form>
    </div>
    <div class="col"></div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
