@model UserPolicyViewModel

@{
    ViewData["Name"] = "Edit";
    Layout = "~/Views/Dashboard/_SharedLayout.cshtml";
}

<h1>Roller</h1>

<h4>Rollehåndtering for @Model.Email</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-controller="BAPerson" asp-action="EditPolicies">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input type="hidden" asp-for="BrugerId" />
                <input type="hidden" asp-for="WasVV" />
                <input asp-for="@Model.IsVV" class="form-check-input" />
                <label class="form-check-label" asp-for="@Model.IsVV">
                    Vicevært
                </label>
            </div>

	        <div class="form-group">
                <input type="submit" value="Gem" class="btn btn-primary bw_button" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="BAPerson" asp-action="Index">Tilbage til oversigt</a>
</div>