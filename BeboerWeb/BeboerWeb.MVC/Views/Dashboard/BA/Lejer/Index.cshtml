@model List<LejerViewModel>
@{
    ViewData["Name"] = "Index";
	Layout = "../_BALayout.cshtml";
}

<h1>Lejere ved @ViewBag.LejemaalInfo</h1>
<br/>
<a asp-action="Create" asp-route-id="@Model[0].LejemaalId">
    <input type="button" value="Opret lejer" class="btn btn-primary" />
</a>
<br/>
<table class="table">
	<thead>
	<tr>
		<th>
			@Html.DisplayNameFor(model => model.First().LejeperiodeStart)
		</th>
        <th>
            @Html.DisplayNameFor(model => model.First().LejeperiodeSlut)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().LejerNavne)
        </th>
        <th></th>
	</tr>
	</thead>
	<tbody>
	@foreach (var item in Model) {
		<tr>
            <td>
                @Html.DisplayFor(modelitem => item.LejeperiodeStart)
            </td>
            <td>
                @Html.DisplayFor(modelitem => item.LejeperiodeSlut)
            </td>
            <td>
                @foreach (var navn in item.LejerNavne)
                {
                    @Html.DisplayFor(modelitem => navn)
                }
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Rediger</a>
            </td>
        </tr>
	}
	</tbody>
</table>
