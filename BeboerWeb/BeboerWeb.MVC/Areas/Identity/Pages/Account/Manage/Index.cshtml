@page
@model IndexModel
@{
    ViewData["Title"] = "Profil";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<h3>@ViewData["Title"]</h3>
<partial name="_StatusMessage" for="StatusMessage" />
<div class="row">
    <div class="col-md-6">
        <form id="profile-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating">
                <input asp-for="Loginnavn" class="form-control" disabled />
                <label asp-for="Loginnavn" class="form-label"></label>
            </div>
            <div class="form-floating">
                <input asp-for="Input.Telefonnr" class="form-control" />
                <label asp-for="Input.Telefonnr" class="form-label"></label>
                <span asp-validation-for="Input.Telefonnr" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.Fornavn" class="form-control" />
                <label asp-for="Input.Fornavn" class="form-label"></label>
                <span asp-validation-for="Input.Fornavn" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.Efternavn" class="form-control" />
                <label asp-for="Input.Efternavn" class="form-label"></label>
                <span asp-validation-for="Input.Efternavn" class="text-danger"></span>
            </div>



            <button id="update-profile-button" type="submit" class="w-100 btn btn-lg btn-primary">Gem</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
